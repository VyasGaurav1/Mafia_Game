# Mafia Client Environment Variables
# Copy this to .env and update values for your environment

# Base path for deployments like GitHub Pages (e.g., /Mafia_Game/)
VITE_BASE_PATH=/

# Router mode: "hash" is recommended for GitHub Pages
VITE_ROUTER_MODE=hash

# Socket.IO server URL (leave empty for same origin in production)
VITE_SOCKET_URL=http://localhost:3001

# API server URL (leave empty for same origin in production)
VITE_API_URL=http://localhost:3001/api
